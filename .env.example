# Environment configuration for Lyra Music
# Copy this file to `.env` and replace placeholder values before running the app.

# SQLite connection string used by Drizzle ORM and the runtime server.
DATABASE_URL="file:./db.sqlite"

# Secret used to sign JWT authentication tokens.
JWT_SECRET="replace-with-strong-secret"

# User agent string required by the MusicBrainz API.
# Example: YourAppName/1.0.0 ( contact@example.com )
MUSICBRAINZ_USER_AGENT="Lyra/0.0.40 (contact@example.com)"

# Optional access code gate for self-hosted signups.
SECRET_ACCESS_CODE="set-an-access-code"

# Genius API credentials (https://docs.genius.com/)
GENIUS_API_CLIENT_ID=""
GENIUS_API_CLIENT_SECRET=""

# Gemini API key used for AI-generated lyrics features.
GEMINI_API_KEY=""

# Toggle for scanner integrations that hit the Genius API.
# Accepts "true" or "false" (defaults to false when unset).
SCANNER_DISABLE_GENIUS="false"
